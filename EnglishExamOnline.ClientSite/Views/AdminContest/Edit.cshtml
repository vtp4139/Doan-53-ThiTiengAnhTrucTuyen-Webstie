@model EnglishExamOnline.Shared.ViewModels.ContestVm
@using EnglishExamOnline.Shared.ViewModels

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container" style=" background-color: white; box-shadow: rgba(149, 157, 165, 0.2) 0px 8px 24px; padding: unset; width: 60%">
    <hr class="bg-primary" style=" height: 10px; border-width: 0;">
    <div class="row justify-content-md-center">
        <div class="col-md-10" style="text-align:center">
            <h3>Cập nhật cuộc thi</h3>
            <hr style="width:100%;text-align:left;margin-left:0">
        </div>
    </div>
    <div class="row justify-content-md-center">
        <div class="col-md-8">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="ContestId" type="hidden" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="ContestName" class="control-label"></label>
                    <input asp-for="ContestName" class="form-control" />
                    <span asp-validation-for="ContestName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ContestScheduleId" class="control-label"></label>
                    <select asp-for="ContestScheduleId" class="form-control">
                        @foreach (var data in ViewBag.scheduleList as IEnumerable<ContestScheduleVm>)
                        {
                            if (Model.ContestScheduleId == data.ContestScheduleId)
                            {
                                <option value="@data.ContestScheduleId" selected>@data.StartTime - @data.Length phút</option>
                            }
                            else
                            {
                                <option value="@data.ContestScheduleId">@data.StartTime - @data.Length phút</option>
                            }
                        }
                    </select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
