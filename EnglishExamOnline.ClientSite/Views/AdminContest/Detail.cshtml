@model EnglishExamOnline.Shared.ViewModels.ContestVm

@{
    ViewData["Title"] = "Chi tiết cuộc thi";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container" style=" background-color: white; box-shadow: rgba(149, 157, 165, 0.2) 0px 8px 24px; padding: unset; width: 60%">
    <hr class="bg-warning" style=" height: 10px; border-width: 0;">
    <div class="row justify-content-md-center">
        <div class="col-md-10" style="text-align:center">
            <h3>Chi tiết đề thi</h3>
            <hr style="width:100%;text-align:left;margin-left:0">
        </div>
    </div>
    <div class="row justify-content-md-center">
        <div class="col-md-3">
            <b>Mã đề: </b>@Model.ContestId
        </div>
        <div class="col-md-7">
            <b>Tên cuộc thi: </b>@Model.ContestName
        </div>
    </div>
    <div class="row justify-content-md-center">     
        <div class="col-md-5">
            <b>Ngày thi: </b>@Model.StartTime
        </div>
        <div class="col-md-5">
            <b>Thời gian: </b>@Model.Length phút
        </div>
    </div>
    <hr style="width:100%;text-align:left;margin-left:0">
    <div class="row justify-content-md-center">
        @{
            int i = 0;
            foreach (var item in Model.ListQuestion)
            {
                i++;
                <div class="col-md-10">
                    <p><b>Câu @i: </b>@item.QuestionInfo</p>
                    <p><b>A. </b>@item.AnswerA</p>
                    <p><b>B. </b>@item.AnswerB</p>
                    <p><b>C. </b>@item.AnswerC</p>
                    <p><b>D. </b>@item.AnswerD</p>
                    <p><b>Đáp án đúng: </b><span class="text-danger">@item.CorrectAnswer</span></p>
                </div>
            }
        }
    </div>
</div>
