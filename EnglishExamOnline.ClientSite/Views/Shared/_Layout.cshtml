<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/content.css" />
    <link rel="stylesheet" href="~/css/regist-confirm.css" />
    <link rel="icon" href="~/icon-exam.ico">
    <!-- Fontawesome -->
    <link rel="stylesheet" href="~/fontawesome/css/all.css">
    @RenderSection("JavaScript", required: false)
    @RenderSection("Styles", false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <span id="textlogo">
                        <b class="text-primary">V-P</b><span class="text-warning">english</span>
                    </span>
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" style="font-size:18px" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home"></i> Trang chủ
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" style="font-size:18px" asp-controller="Home" asp-action="GetContests">
                                <i class="fas fa-calendar-check"></i> Cuộc thi mở đăng ký
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" style="font-size:18px" asp-controller="Home" asp-action="GetEndContests">
                                <i class="fas fa-calendar-times"></i> Cuộc thi đã kết thúc
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" style="font-size:18px" asp-area="" asp-controller="Home" asp-action="Privacy">Giới thiệu</a>
                        </li>
                        @if (TempData["role"] as string == "admin")
                        {
                            <li class="nav-item">
                                <a class="btn btn-danger" asp-controller="Admin" asp-action="Index">
                                    <i class="fas fa-toolbox mr-2"></i>Bảng quản trị
                                </a>
                            </li>
                        }
                    </ul>
                </div>
                <form class="d-flex">
                    <partial name="_LoginPartial" />
                </form>
            </div>
        </nav>
    </header>
    @*<div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>*@
    <div >
        <main role="main" class="pb-3 mb-5">
            @RenderBody()
        </main>
    </div>


    <footer class="bg-white text-lg-start">
            <div class="container">
                <div style="display:flex;">
                    <div style="width:50%">
                        <p>&copy;Nhóm 47 - Đồ án tốt nghiệp - Đề tài 53</p>
                        <p><a asp-area="" asp-controller="Home" asp-action="Privacy">Giới thiệu</a></p>
                        <p><span style="font-size: 25px"><i style="color:blue" class="fab fa-facebook"></i>&nbsp;<i style="color:mediumturquoise" class="fab fa-twitter-square"></i></span></p>
                    </div>
                    <div style="width:50%">
                        <p>Điện thoại: 0312345678/0984544712</p>
                        <p>Địa chỉ: <a href="https://goo.gl/maps/GHe94isW3MGuN53QA">12 Nguyễn Văn Bảo, Phường 4, Gò Vấp, Thành phố Hồ Chí Minh, Vietnam</a></p>
                    </div>
                    
                    
                </div>
            </div>
        </footer>
    @*<footer class="border-top footer text-muted">
            <div class="container">
                &copy; Đồ án tốt nghiệp/Đề tài 53 - Nhóm 47 - Nguyễn Vĩnh Long Vinh/17036561 - Võ Tuấn Phương/17030061
            </div>
        </footer>*@

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @*<script src="~/js/modal.js"></script>*@
    @await Component.InvokeAsync("Notyf")
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


