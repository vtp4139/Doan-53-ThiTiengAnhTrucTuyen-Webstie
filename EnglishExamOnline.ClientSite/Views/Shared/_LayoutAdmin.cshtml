@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Trang quản trị</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/content.css" />
    <link rel="icon" href="~/icon-exam.ico">
    <!-- Fontawesome -->
    <link rel="stylesheet" href="~/fontawesome/css/all.css">
    @RenderSection("JavaScript", required: false)
    @RenderSection("Styles", false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-light border-bottom box-shadow mb-3 text-white">
            <div class="container">
                <a class="navbar-brand" asp-controller="Admin" asp-action="Index">
                    <i class="fas fa-toolbox mr-2"></i><b>V-P english</b> Quản trị
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1" style="font-size:17px">
                        <li class="nav-item active">
                            <a class="nav-link" asp-controller="Admin" asp-action="Index">
                                <i class="fas fa-eye mr-2"></i>Tổng quan
                            </a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" asp-controller="AdminQuestions" asp-action="Index">
                                <i class="fas fa-university mr-2"></i>Ngân hàng câu hỏi
                            </a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" asp-controller="AdminContestSchedule" asp-action="Index">
                                <i class="fas fa-calendar-alt mr-2"></i>Lịch thi
                            </a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" asp-controller="AdminContest" asp-action="Index">
                                <i class="fas fa-graduation-cap mr-2"></i>Cuộc thi
                            </a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" asp-controller="AdminUser" asp-action="Index">
                                <i class="fas fa-users mr-2"></i>Thí sinh
                            </a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link text-danger" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-arrow-left mr-2"></i>Trở lại trang chủ
                            </a>
                        </li>
                    </ul>
                </div>
                <form class="d-flex">
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link text-dark" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-user-circle mr-2"></i>@HttpContextAccessor.HttpContext.Session.GetString("fullname")
                            </a>
                        </li>
                    </ul>
                </form>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/modal.js"></script>
    @await Component.InvokeAsync("Notyf")
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


