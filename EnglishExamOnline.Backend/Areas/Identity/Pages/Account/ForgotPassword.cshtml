@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Quên mật khẩu";
}

<div class="container" style="background-color: white;box-shadow: rgba(149, 157, 165, 0.2) 0px 8px 24px; padding: unset;width: 60%;">
    <hr class="bg-secondary" style="height: 10px; border-width: 0;">
    <div class="row justify-content-md-center">
        <div class="col-md-10 mt-4 mb-5" style="text-align:center">
            <h3 class="text-muted">
                <i class="fas fa-key mr-2"></i>
                Cài lại mật khẩu
            </h3>
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label> Nhập email của bạn</label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Xác nhận</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
