@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Cài lại mật khẩu";
}

<div class="container bg-white mt-5" style="box-shadow: rgba(149, 157, 165, 0.2) 0px 8px 24px; padding: unset; width: 35%;">
    <h5 class="text-center text-white bg-secondary p-2 mb-3" style="border-width: 0;">
        <i class="fas fa-key mr-2"></i> Cài lại mật khẩu
    </h5>
    <div class="row justify-content-md-center">
        <div class="col-md-10">
            <section>
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input asp-for="Input.Code" type="hidden" />
                    <div class="form-group">
                        <label>Email</label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Mật khẩu</label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Nhập lại mật khẩu</label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-secondary mb-4">Xác nhận</button>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
